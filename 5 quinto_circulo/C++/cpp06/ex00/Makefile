NAME        = convert

COMPILER    = c++

CFLAGS      = -Wall -Werror -Wextra -std=c++98 -Wshadow
DEBUG_FLAGS = -DDEBUG -g

SRC_DIR     = src/
OBJ_DIR     = obj/
INCLUDE_DIR = inc/

SOURCE_FILES =

SRCS		= $(addprefix $(SRC_DIR), $(SOURCE_FILES))
OBJS		= $(patsubst $(SRC_DIR)%.cpp, $(OBJ_DIR)%.o, $(SRCS))
DEPS		= $(OBJS:.o=.d)

all: $(NAME)

$(NAME): $(OBJS)
	$(COMPILER) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "\033[1;36m"
	@echo "==================================================="
	@echo "	üçè‚Äãüçé $(NAME) Compiled! üçé‚Äãüçè"
	@echo "==================================================="
	@echo "\033[0m"

$(OBJ_DIR)%.o: $(SRC_DIR)%.cpp
	@mkdir -p $(OBJ_DIR)
	$(COMPILER) $(CFLAGS) -I $(INCLUDE_DIR) -MMD -c $< -o $@

clean:
	rm -rf $(OBJ_DIR)
	@echo "\033[1;33m"
	@echo "==================================================="
	@echo "	üßπ Object files cleaned! üßπ"
	@echo "==================================================="
	@echo "\033[0m"

fclean: clean
	rm -f $(NAME)
	@echo "\033[1;34m"
	@echo "==================================================="
	@echo "	üóëÔ∏è  Executable removed! üóëÔ∏è"
	@echo "==================================================="
	@echo "\033[0m"

re:	fclean all

run: all
	@echo "\033[1;32m"
	@echo "==================================================="
	@echo " ‚ö∞Ô∏è‚Äã  Executing $(NAME)... ‚ö∞Ô∏è‚Äã‚Äã‚Äã‚Äã"
	@echo "==================================================="
	@echo "\033[0m"
	./$(NAME)

debug: CFLAGS += $(DEBUG_FLAGS)
debug: fclean all
	@echo "\033[1;31m"
	@echo "==================================================="
	@echo "	üêõ DEBUG MODE ENABLED üêõ"
	@echo "==================================================="
	@echo "\033[0m"

-include $(DEPS)
.PHONY: all clean fclean re run
