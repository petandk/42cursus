NAME        = phonebook

COMPILER    = c++

CFLAGS      = -Wall -Werror -Wextra -std=c++98

SRC_DIR     = src/
OBJ_DIR     = obj/
INCLUDE_DIR = inc/

SOURCE_FILES = main.cpp \

SRCS		= $(addprefix $(SRC_DIR), $(SOURCE_FILES))
OBJS		= $(patsubst $(SRC_DIR)%.cpp, $(OBJ_DIR)%.o, $(SRCS))
DEPS		= $(OBJS:.o=.d)

all: $(NAME)

$(NAME): $(OBJS)
	$(COMPILER) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "\033[1;36m"
	@echo "==================================================="
	@echo "	üçè‚Äãüçé $(NAME) Compiled! üçé‚Äãüçè"
	@echo "==================================================="
	@echo "\033[0m"

$(OBJ_DIR)%.o: $(SRC_DIR)%.cpp
	@mkdir -p $(OBJ_DIR)
	$(COMPILER) $(CFLAGS) -I $(INCLUDE_DIR) -MMD -c $< -o $@

clean:
	rm -rf $(OBJ_DIR)
	@echo "\033[1;33m"
	@echo "==================================================="
	@echo "	üßπ Object files cleaned! üßπ"
	@echo "==================================================="
	@echo "\033[0m"

fclean: clean
	rm -f $(NAME)
	@echo "\033[1;34m"
	@echo "==================================================="
	@echo "	üóëÔ∏è  Executable removed! üóëÔ∏è"
	@echo "==================================================="
	@echo "\033[0m"

re:	fclean all

-include $(DEPS)
.PHONY: all clean fclean re
